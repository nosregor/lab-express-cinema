<h1>Ironhack Cinema</h1>
<p>Click on the movies to check the showtimes!</p>


<div class="container">
  <div class="row">
    {{#each movies}}
    <div class="col-6 col-md-4 movie-card">
      <img src="{{this.image}}" alt="{{this.title}}">
      <p class="movie-title">{{this.title}}</p>
      <a class="lnk-movie" href="/movie">See more</a>
    </div>
    {{/each}}
  </div>
</div>